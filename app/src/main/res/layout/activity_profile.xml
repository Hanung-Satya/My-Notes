<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/people"
            android:background="#FFFFFF"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:contentDescription="fotoProfil"/>

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#7B1FA2"
            android:layout_marginStart="12dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/quoteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Every great idea starts with one line."
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:padding="12dp"
        android:gravity="center"
        android:textColor="#4A148C"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_quote"/>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="LOGOUT"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7B1FA2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:padding="12dp"
        android:onClick="logOutEvent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/navbar"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/bg_navbar"
        >

        <ImageView
            android:id="@+id/home"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/primaryColor"
            android:src="@drawable/home"
            />

        <ImageView
            android:id="@+id/newNote"
            android:padding="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white"
            android:background="@drawable/bg_newnotenav"
            android:src="@drawable/plus"
            />

        <ImageView
            android:id="@+id/profile"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/primaryColor"
            android:src="@drawable/people"
            android:onClick="goToProfilePage"
            />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotePages"
    android:orientation="vertical"
    android:padding="12dp"
    >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/primaryColor"
            android:contentDescription="userIcon"
            android:src="@drawable/people"
            />

        <TextView
            android:id="@+id/usermame"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="User"
            android:textSize="18sp"
            android:textColor="@color/primaryColor"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/editTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_frame"
        >

        <EditText
            android:id="@+id/writeNote"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bg_edit_text"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:hint="Write your note here..."
            android:padding="6dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </FrameLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/poppins_bold"
        android:text="Submit"
        android:textSize="18sp"
        app:cornerRadius="15dp"
        />

    <TextView
        android:id="@+id/yourNotesLabel"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_black"
        android:text="Your Notes:"
        android:textSize="24sp"
        android:textColor="@color/primaryColor"
        />

    <ScrollView
        android:id="@+id/noteScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/notesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--Bagian ini diisi TextView secara otomatis waktu user menambahkan catatan baru-->

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/navbar"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/bg_navbar"
        >

        <ImageView
            android:id="@+id/home"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/primaryColor"
            android:src="@drawable/home"
            />

        <ImageView
            android:id="@+id/newNote"
            android:padding="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white"
            android:background="@drawable/bg_newnotenav"
            android:src="@drawable/plus"
            />

        <ImageView
            android:id="@+id/profile"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/primaryColor"
            android:src="@drawable/people"
            />
    </LinearLayout>
</LinearLayout>